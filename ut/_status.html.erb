<section id="status">
  <div class="card" id="primary-content">
    <div class="header">
      <h4>Status Indicators</h4>
    </div>
    <div class="content">
      <% example do %>

<ol class="no-bullet">
  <li><span class="status pending"></span> Pending</li>
  <li><span class="status accepted"></span> Accepted</li>
  <li>
    <span class="status modified">
      <span class="inner"></span>
    </span>
    Accepted with modifications
  </li>
  <li><span class="status rejected"></span> Rejected</li>
</ol>
      <% end %>
    </div>
  </div>
</section>
